public class Potion {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		String value = null;
		String ab = null;
		String set[] = new String[0];
		System.err.println(set);
		int i =0;
		do {
			String protemp[] = new String[i+1];
			System.out.print("输入商品名称：");
			value = scanner.next();
			protemp[i] = value;
			set[protemp.length-1] = protemp[i];
			i++;
			set = protemp;
			System.out.println("输入y继续写入商品");
			ab = scanner.next();
		} while (ab.equals("y"));
//		for (String string : protemp) {
//			System.out.println(string);
//		}
	}
}
